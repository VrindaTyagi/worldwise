{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES2020",
        "baseUrl": "./src",
        "checkJs": true,
        "jsx": "react-jsx",
        "strictNullChecks": true,
        "strictFunctionTypes": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ],
    "importCSSModule": {
        "prefix": "csm",
        "scope": "javascript,typescript,javascriptreact",
        "body": ["import styles from './${TM_FILENAME_BASE}.module.css'"],
        "description": "Import CSS Module as `styles`"
    },
}